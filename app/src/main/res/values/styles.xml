<resources>
    <!-- 去掉ActionBar，欲练此功，必先自宫 -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- toolbar（actionbar）背景颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#3498db</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppBaseTheme_ac" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- toolbar（actionbar）背景颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">#3498db</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorControlActivated">@color/bg_transparent</item>
        <item name="colorControlNormal">@color/bg_transparent</item>
        <item name="height">0.1dp</item>
        <item name="android:textSize">@dimen/m_font</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme" parent="AppBaseTheme"></style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="text_center_white_normal">
        <item name="android:textSize">@dimen/m_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_center_black_normal">
        <item name="android:textSize">@dimen/m_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="line_Match_0_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/line_color1</item>
    </style>

    <style name="WarpWarp_Red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="Animation.Popup" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="text_left_white_normal">
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>
    <style name="text_center_default_normal">
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:textColor">#A9A9A9</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
